<Application x:Class="Archive.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Archive.GUI"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             Startup="Application_Startup"
             Exit="Application_Exit">
    <Application.Resources>
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Key="NotifyIcon"
                        IconSource="/Assets/icon.ico"
                        ToolTipText="Archive - Backup Manager"
                        TrayLeftMouseUp="NotifyIcon_TrayLeftMouseUp">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open Archive" Click="MenuOpen_Click" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="Scheduler Running" x:Name="MenuSchedulerStatus" IsCheckable="True" IsChecked="True" Click="MenuToggleScheduler_Click"/>
                    <MenuItem Header="Run on Windows Startup" x:Name="MenuStartupStatus" IsCheckable="True" Click="MenuToggleStartup_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="MenuExit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Application.Resources>
</Application>
