<Window x:Class="Archive.GUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings" Height="330" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <StackPanel Grid.Row="0">
            <GroupBox Header="General" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox x:Name="ChkRunOnStartup" 
                              Content="Run Archive when Windows starts"
                              Margin="0,0,0,10"
                              Checked="ChkRunOnStartup_Changed"
                              Unchecked="ChkRunOnStartup_Changed"/>
                    <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="11">
                        When enabled, Archive will start automatically in the system tray when you log in to Windows.
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Future settings can be added here -->
        <TextBlock Grid.Row="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   FontStyle="Italic"
                   Visibility="Collapsed">
            Additional settings will appear here in future versions.
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Close" Width="80" Height="30" IsDefault="True" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
