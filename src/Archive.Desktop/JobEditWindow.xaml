<Window x:Class="Archive.Desktop.JobEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Job"
        Height="580"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Job"
                   FontSize="20"
                   FontWeight="SemiBold" />

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Name" />
            <TextBox Grid.Column="1" x:Name="NameTextBox" MaxLength="200" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="Description" />
            <TextBox Grid.Column="1"
                     x:Name="DescriptionTextBox"
                     Height="90"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Source" />
            <TextBox Grid.Column="1" x:Name="SourcePathTextBox" />
        </Grid>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Destination" />
            <TextBox Grid.Column="1" x:Name="DestinationPathTextBox" />
        </Grid>

        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Trigger" />
            <ComboBox Grid.Column="1" x:Name="TriggerTypeComboBox" SelectionChanged="ScheduleInput_OnChanged" />
        </Grid>

        <Grid Grid.Row="6" Margin="0,12,0,0" x:Name="CronRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Cron" />
            <TextBox Grid.Column="1" x:Name="CronExpressionTextBox" TextChanged="ScheduleInput_OnChanged" />
        </Grid>

        <Grid Grid.Row="7" Margin="0,12,0,0" x:Name="OneTimeRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="One-Time" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <DatePicker x:Name="OneTimeDatePicker" Width="150" SelectedDateChanged="ScheduleInput_OnChanged" />
                <TextBox x:Name="OneTimeTimeTextBox"
                         Width="80"
                         Margin="8,0,0,0"
                         ToolTip="HH:mm"
                         TextChanged="ScheduleInput_OnChanged" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="8" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Enabled" />
            <CheckBox Grid.Column="1" x:Name="EnabledCheckBox" VerticalAlignment="Center" />
        </Grid>

        <Border Grid.Row="9"
                Margin="0,12,0,0"
            Padding="8">
            <TextBlock x:Name="SchedulePreviewTextBlock"
                       Text=""
                       TextWrapping="Wrap" />
        </Border>

        <TextBlock Grid.Row="10"
                   Margin="0,16,0,0"
                   Foreground="Red"
                   Text=""
                   x:Name="ValidationTextBlock" />

        <StackPanel Grid.Row="11"
                    Margin="0,16,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Save"
                    Width="88"
                    Margin="0,0,8,0"
                    Click="SaveButton_OnClick" />
            <Button Content="Close"
                    Width="88"
                    Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>