<Window x:Class="Archive.Desktop.JobEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Job"
        Icon="Assets/icon.ico"
        Height="680"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderTextBlock"
               Text="Edit Job"
                   FontSize="20"
                   FontWeight="SemiBold" />

        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Name" />
            <TextBox Grid.Column="1" x:Name="NameTextBox" MaxLength="200" />
        </Grid>

        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="Description" />
            <TextBox Grid.Column="1"
                     x:Name="DescriptionTextBox"
                     Height="90"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Source" />
            <TextBox Grid.Column="1" x:Name="SourcePathTextBox" Margin="0,0,8,0" />
            <Button Grid.Column="2"
                    Content="Folder..."
                    Click="BrowseSourceFolderButton_OnClick" />
        </Grid>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Destination" />
            <TextBox Grid.Column="1" x:Name="DestinationPathTextBox" Margin="0,0,8,0" />
            <Button Grid.Column="2"
                    Content="Folder..."
                    Click="BrowseDestinationFolderButton_OnClick" />
        </Grid>

        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="Sync Options" />
            <StackPanel Grid.Column="1">
                <CheckBox x:Name="RecursiveCheckBox" Content="Include subdirectories" />
                <CheckBox x:Name="DeleteOrphanedCheckBox"
                          Margin="0,6,0,0"
                          Content="Delete orphaned destination files"
                          Checked="DeleteOrphanedCheckBox_OnChecked" />
                <CheckBox x:Name="SkipHiddenAndSystemCheckBox"
                          Margin="0,6,0,0"
                          Content="Skip hidden and system files" />
                <CheckBox x:Name="VerifyAfterCopyCheckBox"
                          Margin="0,6,0,0"
                          Content="Verify copied files with hash check" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="6" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Trigger" />
            <ComboBox Grid.Column="1" x:Name="TriggerTypeComboBox" SelectionChanged="ScheduleInput_OnChanged" />
        </Grid>

        <Grid Grid.Row="7" Margin="0,12,0,0" x:Name="RecurringModeRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Recurring Mode" />
            <StackPanel Grid.Column="1">
                <ComboBox x:Name="RecurringModeComboBox"
                          SelectionChanged="ScheduleInput_OnChanged" />
                <TextBlock Margin="0,6,0,0"
                           Opacity="0.8"
                           Text="Switching to Advanced keeps the generated cron so you can fine-tune it." />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="8" Margin="0,12,0,0" x:Name="SimpleRecurringRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="Simple" />
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Frequency" />
                    <ComboBox x:Name="SimpleFrequencyComboBox"
                              Width="110"
                              Margin="8,0,0,0"
                              SelectionChanged="ScheduleInput_OnChanged" />
                    <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" Text="Time" />
                    <TextBox x:Name="SimpleTimeTextBox"
                             Width="70"
                             Margin="8,0,0,0"
                             ToolTip="HH:mm"
                             TextChanged="ScheduleInput_OnChanged" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock VerticalAlignment="Center" Text="Weekday" />
                    <ComboBox x:Name="SimpleDayOfWeekComboBox"
                              Width="110"
                              Margin="8,0,0,0"
                              SelectionChanged="ScheduleInput_OnChanged" />
                    <TextBlock VerticalAlignment="Center" Margin="12,0,0,0" Text="Month day" />
                    <TextBox x:Name="SimpleDayOfMonthTextBox"
                             Width="40"
                             Margin="8,0,0,0"
                             TextChanged="ScheduleInput_OnChanged" />
                </StackPanel>
                <TextBlock x:Name="SimpleCronPreviewTextBlock"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="9" Margin="0,12,0,0" x:Name="CronRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Cron" />
            <TextBox Grid.Column="1" x:Name="CronExpressionTextBox" TextChanged="ScheduleInput_OnChanged" />
        </Grid>

        <Grid Grid.Row="10" Margin="0,12,0,0" x:Name="OneTimeRowGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Top" Margin="0,4,0,0" Text="One-Time" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <DatePicker x:Name="OneTimeDatePicker" Width="150" SelectedDateChanged="ScheduleInput_OnChanged" />
                <TextBox x:Name="OneTimeTimeTextBox"
                         Width="80"
                         Margin="8,0,0,0"
                         ToolTip="HH:mm"
                         TextChanged="ScheduleInput_OnChanged" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="11" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Text="Enabled" />
            <CheckBox Grid.Column="1" x:Name="EnabledCheckBox" VerticalAlignment="Center" />
        </Grid>

        <Border Grid.Row="12"
                Margin="0,12,0,0"
            Padding="8">
            <TextBlock x:Name="SchedulePreviewTextBlock"
                       Text=""
                       TextWrapping="Wrap" />
        </Border>

        <TextBlock Grid.Row="13"
                   Margin="0,16,0,0"
                   Foreground="Red"
                   Text=""
                   x:Name="ValidationTextBlock" />

        <StackPanel Grid.Row="14"
                    Margin="0,16,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Preview Operations"
                Width="140"
                Margin="0,0,8,0"
                Click="PreviewOperationsButton_OnClick" />
            <Button Content="Save"
                    Width="88"
                    Margin="0,0,8,0"
                    Click="SaveButton_OnClick" />
            <Button Content="Close"
                    Width="88"
                    Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>