<Window x:Class="Archive.Desktop.JobHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job History"
        Icon="Assets/icon.ico"
        Height="620"
        Width="920"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="EmptyStateTextBlock"
                       Text="No execution history is available for this job yet."
                       Margin="0,0,0,0"
                       Visibility="Collapsed" />

            <DataGrid Grid.Row="1"
                      x:Name="ExecutionsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      RowHeaderWidth="0"
                      SelectionMode="Single"
                      KeyDown="ExecutionsDataGrid_OnKeyDown"
                      MouseDoubleClick="ExecutionsDataGrid_OnMouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Start Time"
                                        Binding="{Binding StartTimeLocal}"
                                        Width="145" />
                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="115" />
                    <DataGridTextColumn Header="Duration"
                                        Binding="{Binding DurationText}"
                                        Width="95" />
                    <DataGridTextColumn Header="Scanned"
                                        Binding="{Binding FilesScanned}"
                                        Width="75" />
                    <DataGridTextColumn Header="Copied"
                                        Binding="{Binding FilesCopied}"
                                        Width="75" />
                    <DataGridTextColumn Header="Updated"
                                        Binding="{Binding FilesUpdated}"
                                        Width="75" />
                    <DataGridTextColumn Header="Deleted"
                                        Binding="{Binding FilesDeleted}"
                                        Width="75" />
                    <DataGridTextColumn Header="Failed"
                                        Binding="{Binding FilesFailed}"
                                        Width="75" />
                    <DataGridTextColumn Header="Warnings"
                                        Binding="{Binding WarningCount}"
                                        Width="75" />
                    <DataGridTemplateColumn Header="Details" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock HorizontalAlignment="Center">
                                    <Hyperlink Click="ViewDetailsHyperlink_OnClick">View</Hyperlink>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Window>