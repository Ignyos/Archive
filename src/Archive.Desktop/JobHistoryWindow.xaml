<Window x:Class="Archive.Desktop.JobHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job History"
        Icon="Assets/icon.ico"
        Height="620"
        Width="920"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Job History"
                   FontSize="20"
                   FontWeight="SemiBold" />

        <StackPanel Grid.Row="1" Margin="0,12,0,0">
            <TextBlock Text="Selected Job:" FontWeight="SemiBold" />
            <TextBlock x:Name="JobNameTextBlock" Margin="0,2,0,0" />
        </StackPanel>

        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="EmptyStateTextBlock"
                       Text="No execution history is available for this job yet."
                       Margin="0,0,0,8"
                       Visibility="Collapsed" />

            <DataGrid Grid.Row="1"
                      x:Name="ExecutionsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="ExecutionsDataGrid_OnSelectionChanged"
                      MouseDoubleClick="ExecutionsDataGrid_OnMouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Start Time"
                                        Binding="{Binding StartTimeLocal}"
                                        Width="150" />
                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="120" />
                    <DataGridTextColumn Header="Duration"
                                        Binding="{Binding DurationText}"
                                        Width="100" />
                    <DataGridTextColumn Header="Scanned"
                                        Binding="{Binding FilesScanned}"
                                        Width="80" />
                    <DataGridTextColumn Header="Copied"
                                        Binding="{Binding FilesCopied}"
                                        Width="80" />
                    <DataGridTextColumn Header="Updated"
                                        Binding="{Binding FilesUpdated}"
                                        Width="80" />
                    <DataGridTextColumn Header="Deleted"
                                        Binding="{Binding FilesDeleted}"
                                        Width="80" />
                    <DataGridTextColumn Header="Failed"
                                        Binding="{Binding FilesFailed}"
                                        Width="80" />
                    <DataGridTextColumn Header="Warnings"
                                        Binding="{Binding WarningCount}"
                                        Width="80" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <GroupBox Grid.Row="3" Margin="0,12,0,0" Header="Execution Details">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock x:Name="SelectedExecutionSummaryTextBlock"
                           Text="Select an execution above to inspect details."
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="1"
                           Margin="0,6,0,0"
                           x:Name="SelectedExecutionCountersTextBlock"
                           TextWrapping="Wrap" />

                <TextBlock Grid.Row="2"
                           Margin="0,8,0,4"
                           Text="Logs"
                           FontWeight="SemiBold" />

                <DataGrid Grid.Row="3"
                          x:Name="ExecutionLogsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time"
                                            Binding="{Binding TimestampLocal}"
                                            Width="140" />
                        <DataGridTextColumn Header="Level"
                                            Binding="{Binding Level}"
                                            Width="80" />
                        <DataGridTextColumn Header="Operation"
                                            Binding="{Binding OperationType}"
                                            Width="90" />
                        <DataGridTextColumn Header="File"
                                            Binding="{Binding FilePath}"
                                            Width="220" />
                        <DataGridTextColumn Header="Message"
                                            Binding="{Binding Message}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4"
                    Margin="0,16,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Open Details"
                Width="104"
                Margin="0,0,8,0"
                Click="OpenDetailsButton_OnClick" />
            <Button Content="Refresh"
                    Width="88"
                    Margin="0,0,8,0"
                    Click="RefreshButton_OnClick" />
            <Button Content="Close"
                    Width="88"
                    Click="CloseButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>