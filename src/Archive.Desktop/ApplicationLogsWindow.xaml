<Window x:Class="Archive.Desktop.ApplicationLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Application Logs"
        Icon="Assets/icon.ico"
        Height="620"
        Width="980"
        MinHeight="480"
        MinWidth="760"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_OnLoaded">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <TextBlock VerticalAlignment="Center"
                       Text="Latest application logs (most recent first)" />
            <Button Content="Refresh"
                    Width="90"
                    Margin="12,0,0,0"
                    Click="RefreshButton_OnClick" />
        </StackPanel>

        <DataGrid x:Name="LogsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  RowHeaderWidth="0"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time"
                                    Binding="{Binding TimestampLocal}"
                                    Width="170" />
                <DataGridTextColumn Header="Level"
                                    Binding="{Binding Level}"
                                    Width="95" />
                <DataGridTextColumn Header="Source"
                                    Binding="{Binding SourceContext}"
                                    Width="240" />
                <DataGridTextColumn Header="Message"
                                    Binding="{Binding Message}"
                                    Width="*" />
                <DataGridTextColumn Header="Exception"
                                    Binding="{Binding ExceptionSummary}"
                                    Width="280" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>